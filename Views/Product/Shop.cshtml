@model IEnumerable<LTW_NHOM8.Models.Product>

@{
    ViewBag.Title = "Cửa hàng";
}
@{
    var selectedPrice = (Request.QueryString["price"] ?? "");
}
<!-- Shop Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-4">
            <!-- Price Start -->
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Lọc theo giá</span></h5>
            <div class="bg-light p-4 mb-30">
                <form id="frmPrice">
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" id="price-all" name="price" value="" @(string.IsNullOrEmpty(selectedPrice) ? "checked" : "")>
                        <label class="custom-control-label" for="price-all">Tất cả</label>
                        <span class="badge border font-weight-normal">1000</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" id="price-1" name="price" value="0-10000000" @(selectedPrice == "0-10000000" ? "checked" : "")>
                        <label class="custom-control-label" for="price-1">0 - 10tr</label>
                        <span class="badge border font-weight-normal">150</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" id="price-2" name="price" value="10000000-20000000" @(selectedPrice == "10000000-20000000" ? "checked" : "")>
                        <label class="custom-control-label" for="price-2">10tr - 20tr</label>
                        <span class="badge border font-weight-normal">295</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" id="price-3" name="price" value="20000000-30000000" @(selectedPrice == "20000000-30000000" ? "checked" : "")>
                        <label class="custom-control-label" for="price-3">20tr - 30tr</label>
                        <span class="badge border font-weight-normal">246</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" id="price-4" name="price" value="30000000-40000000" @(selectedPrice == "30000000-40000000" ? "checked" : "")>
                        <label class="custom-control-label" for="price-4">30tr - 40tr</label>
                        <span class="badge border font-weight-normal">145</span>
                    </div>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <input type="radio" class="custom-control-input" id="price-5" name="price" value="40000000-50000000" @(selectedPrice == "40000000-50000000" ? "checked" : "")>
                        <label class="custom-control-label" for="price-5">40tr - 50tr</label>
                        <span class="badge border font-weight-normal">168</span>
                    </div>

                    <button type="submit" class="btn btn-warning btn-block mt-4">
                        <i class="fa fa-search mr-1"></i> Tìm kiếm
                    </button>
                </form>
            </div>
            <!-- Price End -->

        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div>
                            <button class="btn btn-sm btn-light"><i class="fa fa-th-large"></i></button>
                            <button class="btn btn-sm btn-light ml-2"><i class="fa fa-bars"></i></button>
                        </div>
                        <div class="ml-2">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">Sorting</button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#">Latest</a>
                                    <a class="dropdown-item" href="#">Popularity</a>
                                    <a class="dropdown-item" href="#">Best Rating</a>
                                </div>
                            </div>
                            <div class="btn-group ml-2">
                                <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">Showing</button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#">10</a>
                                    <a class="dropdown-item" href="#">20</a>
                                    <a class="dropdown-item" href="#">30</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                        <div class="product-item bg-light mb-4">
                            <div class="product-img position-relative overflow-hidden">
                                <img class="img-fluid w-100"
                                     src="@(string.IsNullOrEmpty(item.MainImage)
                                            ? Url.Content("~/Content/img/no-image.png")
                                            : Url.Content("~/Content/img/main/" + item.MainImage))"
                                     alt="@item.ProductName" />


                                <div class="product-action">
                                    <a class="btn btn-outline-dark btn-square" href="#">
                                        <i class="fa fa-shopping-cart"></i>
                                    </a>
                                    <a class="btn btn-outline-dark btn-square" href="#">
                                        <i class="far fa-heart"></i>
                                    </a>
                                    <a class="btn btn-outline-dark btn-square" href="#">
                                        <i class="fa fa-sync-alt"></i>
                                    </a>

                                    <a class="btn btn-outline-dark btn-square"
                                       href="@Url.Action("Details", "Product", new { id = item.ProductId })">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="text-center py-4">
                                <a class="h6 text-decoration-none text-truncate"
                                   href="@Url.Action("Details", "Product", new { id = item.ProductId })">
                                    @item.ProductName
                                </a>

                                <div class="d-flex align-items-center justify-content-center mt-2">
                                    <h5>@string.Format("{0:N0} đ", item.Price)</h5>
                                </div>

                                <!-- Rating để placeholder (chưa có bảng rating) -->
                                <div class="d-flex align-items-center justify-content-center mb-1">
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small>(0)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @{
                    int page = ViewBag.Page ?? 1;
                    int totalPages = ViewBag.TotalPages ?? 1;

                    string q = ViewBag.Q as string;
                    string price = ViewBag.Price as string;
                    int? categoryId = ViewBag.CategoryId as int?;

                    int window = 2; // số trang hiển thị mỗi bên (2 => tổng ~ 5 trang quanh current)
                    int start = Math.Max(1, page - window);
                    int end = Math.Min(totalPages, page + window);
                }

                @if (totalPages > 1)
                {
                    <div class="col-12">
                        <nav>
                            <ul class="pagination justify-content-center">

                                <!-- Previous -->
                                <li class="page-item @(page <= 1 ? "disabled" : "")">
                                    <a class="page-link"
                                       href="@Url.Action("Shop","Product", new { q = q, price = price, categoryId = categoryId, page = page - 1 })">
                                        Previous
                                    </a>
                                </li>

                                <!-- First page -->
                                <li class="page-item @(page == 1 ? "active" : "")">
                                    <a class="page-link"
                                       href="@Url.Action("Shop","Product", new { q = q, price = price, categoryId = categoryId, page = 1 })">
                                        1
                                    </a>
                                </li>

                                <!-- Left ellipsis -->
                                @if (start > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }

                                <!-- Middle window -->
                                @for (int i = start; i <= end; i++)
                                {
                                    if (i == 1 || i == totalPages) { continue; }

                                    <li class="page-item @(i == page ? "active" : "")">
                                        <a class="page-link"
                                           href="@Url.Action("Shop","Product", new { q = q, price = price, categoryId = categoryId, page = i })">
                                            @i
                                        </a>
                                    </li>
                                }

                                <!-- Right ellipsis -->
                                @if (end < totalPages - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }

                                <!-- Last page -->
                                @if (totalPages > 1)
                                {
                                    <li class="page-item @(page == totalPages ? "active" : "")">
                                        <a class="page-link"
                                           href="@Url.Action("Shop","Product", new { q = q, price = price, categoryId = categoryId, page = totalPages })">
                                            @totalPages
                                        </a>
                                    </li>
                                }

                                <!-- Next -->
                                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                                    <a class="page-link"
                                       href="@Url.Action("Shop","Product", new { q = q, price = price, categoryId = categoryId, page = page + 1 })">
                                        Next
                                    </a>
                                </li>

                            </ul>
                        </nav>
                    </div>
                }


            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
