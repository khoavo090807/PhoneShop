@{
    ViewBag.Title = "Login";
}

<div class="container-fluid py-5">
    <div class="row px-xl-5 justify-content-center">
        <div class="col-lg-6">
            <div class="bg-light p-30">

                <div class="text-center mb-4">
                    <h2 class="section-title position-relative text-uppercase mx-0 mb-0">
                        <span class="bg-secondary pr-3">Tài khoản</span>
                    </h2>
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }

                <!-- Tabs -->
                <ul class="nav nav-pills nav-justified mb-4" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.ActiveTab == "register" ? "" : "active")" data-toggle="pill" href="#login">
                            <i class="fa fa-sign-in-alt mr-1"></i> Đăng nhập
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.ActiveTab == "register" ? "active" : "")" data-toggle="pill" href="#register">
                            <i class="fa fa-user-plus mr-1"></i> Đăng ký
                        </a>
                    </li>
                </ul>

                <div class="tab-content">

                    <!-- LOGIN -->
                    <div class="tab-pane fade @(ViewBag.ActiveTab == "register" ? "" : "show active")" id="login">
                        <form method="post" action="@Url.Action("Login","User")">
                            <div class="form-group">
                                <label>Email / Số điện thoại</label>
                                <input type="text" name="LoginIdentity" class="form-control"
                                       placeholder="Nhập email hoặc số điện thoại" required />
                            </div>

                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input type="password" name="Password" class="form-control"
                                       placeholder="Nhập mật khẩu" required />
                            </div>

                            @if (ViewBag.LoginError != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.LoginError
                                </div>
                            }

                            <button type="submit" class="btn btn-primary btn-block py-2">
                                Đăng nhập
                            </button>
                        </form>
                    </div>

                    <!-- REGISTER -->
                    <div class="tab-pane fade @(ViewBag.ActiveTab == "register" ? "show active" : "")" id="register">
                        <form method="post" action="@Url.Action("Register","User")">
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <input type="text" name="FullName" class="form-control"
                                       placeholder="Nhập họ và tên" required />
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="Email" class="form-control"
                                       placeholder="Nhập email" required />
                            </div>

                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input type="tel" name="Phone" class="form-control"
                                       placeholder="Nhập số điện thoại"
                                       pattern="[0-9]{9,11}" required />
                            </div>

                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input type="password" name="Password" class="form-control"
                                       placeholder="Tạo mật khẩu" required />
                            </div>

                            <div class="form-group">
                                <label>Nhập lại mật khẩu</label>
                                <input type="password" name="ConfirmPassword" class="form-control"
                                       placeholder="Nhập lại mật khẩu" required />
                            </div>

                            @if (ViewBag.RegisterError != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.RegisterError
                                </div>
                            }

                            <button type="submit" class="btn btn-primary btn-block py-2">
                                Đăng ký
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
s